@model PagedList<Article>
<table>
    @{bool line = true;}
    @foreach (var article in Model)
    { 
        <tr class="@string.Format(line ? "odd" : "")">
            <td>@article.Title</td>
            <td class="action"><a href="" class="view">View </a><a href="@Url.Action("Edit", new { id = article.ID })" class="edit">
                Edit</a><a onclick="return ConfirmDelete();" href="@Url.Action("Delete", new { id = article.ID })" class="delete">Delete
                </a></td>
        </tr>
        line = !line;
    }
</table>
@Html.Partial("_Pager", Model)
