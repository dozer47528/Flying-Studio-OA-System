@model MODEL.LeaveProcess
@{
    ViewBag.Title = "审批请假流程 | 工作流平台 | 办公OA系统";
    Layout = "~/Views/Process/_Layout.cshtml";
}
<h2>
    @Html.ActionLink("所有任务", "Index", "Process") &raquo;
    @Html.ActionLink("审批请假流程", "Create", "Process", new { @class = "active" })
    @if (!string.IsNullOrEmpty(Request["from"]))
    {
        @Html.Raw(" &raquo; ")
        <a href="@Uri.UnescapeDataString(Request["from"])">返回来源页面</a>
    }
</h2>
<div id="main">
    <br />
    @using (Html.BeginForm("PostLeaveProcess", "Process", new { id = Model.ID }))
    {
        <fieldset>
            <h3>申请理由：</h3>
            <p>
                <br />
                @Html.DisplayFor(m => m.Memo)
            </p>
            <p>
                <input type="radio" id="agree_1" name="agree" value="1" /><label for="agree_1">同意
                </label>
                <input type="radio" id="agree_0" name="agree" value="0" /><label for="agree_0">不同意
                </label>
            </p>
        </fieldset>
        <input type="submit" value="提交" />
    }
</div>
